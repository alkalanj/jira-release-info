{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "ESNext.Array",
      "ESNext",
      "dom"
    ],
    "module": "es2020",
    "moduleResolution": "bundler",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
